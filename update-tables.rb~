require './local_sequel'

DB.alter_table :users do
	drop_column :vparas
	drop_column :vbooks
	drop_column :vnames
end

DB.alter_table :paras do
	[:upvotes,:downvotes].each do |o|
		drop_column o
		add_column o,String
	end
end

DB.alter_table :books do
	[:endvotes,:noendvotes].each do |o|
		drop_column o
		add_column o,String
	end
	[:upvotes,:downvotes].each{|o| create_table o}
end

DB.alter_table :names do
	[:upvotes,:downvotes].each{|o| create_table o}
end
